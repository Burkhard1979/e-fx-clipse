<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=group.open">
         <command
               commandId="at.bestsolution.efxclipse.tooling.ui.openwithsceneb"
               label="%command.label"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.name"
                              value="*.fxml">
                        </test>
                     </adapt>
                  </iterate>
                  <count
                        value="1">
                  </count>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="at.bestsolution.efxclipse.tooling.ui.openwithsceneb"
            name="%command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="at.bestsolution.efxclipse.tooling.ui.handler.OpenWithFXMLHandler"
            commandId="at.bestsolution.efxclipse.tooling.ui.openwithsceneb">
         <enabledWhen>
            <with
                  variable="efx_sceneBuilderAvailable">
               <equals
                     value="true">
               </equals>
            </with></enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="at.bestsolution.efxclipse.tooling.ui.handler.EfxSourceProvider">
         <variable
               name="efx_sceneBuilderAvailable"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
